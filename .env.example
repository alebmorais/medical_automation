# Medical Automation Suite Configuration
# Copy this file to .env and adjust values for your environment

# Environment (development or production)
ENVIRONMENT=development

# Server Configuration
SERVER_HOST=0.0.0.0
MEDICAL_SERVER_PORT=8080
SNIPPET_SERVER_PORT=5000

# Default server IP for clients (change to your Raspberry Pi's IP)
DEFAULT_SERVER_IP=pi.local

# Database Paths (relative to project root)
MEDICAL_DB_PATH=data/automation.db
SNIPPET_DB_PATH=data/snippets.db

# Logging
LOG_LEVEL=INFO
DEBUG=False
MAX_LOG_SIZE=10485760
LOG_BACKUP_COUNT=5

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-here-change-this-in-production

# CORS Origins (comma-separated)
CORS_ORIGINS=*

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Database settings
DB_TIMEOUT=5
DB_CHECK_SAME_THREAD=True